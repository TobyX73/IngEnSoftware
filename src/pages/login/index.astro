---
import Layout from '../../layouts/Layout.astro';
---
>
    <div class="flex items-center justify-evenly h-screen">
      <div class="w-full max-w-md">
        <form class="bg-white shadow-md rounded-lg p-8" action="/login" method="post">
          <h2 class="text-2xl font-bold mb-4 flex justify-center">Iniciar Sesion</h2>
          <div class="mb-4">
            <label class="block text-gray-700 font-bold mb-2" for="name">
              Nombre
            </label>
            <input
              class="appearance-none border rounded-lg w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline"
              id="name"
              type="text"
              name="name"
              required
              placeholder="Juan"
            />
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 font-bold mb-2" for="dni">
              DNI
            </label>
            <input
              class="appearance-none border rounded-lg w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline"
              id="dni"
              type="text"
              name="dni"
              required
              placeholder="48294839"
            />
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 font-bold mb-2" for="password">
              Contrasena
            </label>
            <input
              class="appearance-none border rounded-lg w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline"
              id="password"
              type="password"
              name="password"
              required
              placeholder="**************"
            />
          </div>
          <div class="h-10 flex items-center justify-center flex-col">
            <a href="/user/"
              class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
              type="submit"
            >
              Iniciar Sesion
            </a>
          </div>
        </form>
      </div>
      <div class="w-1/2">
        <img src="https://www.shutterstock.com/image-photo/aerial-top-view-forest-tree-600nw-2033096327.jpg" alt="Bosques" class="object-cover h-full rounded-lg">
      </div>
    </div>
